<% layout('layout') %>

<h2>Projects</h2>
<div class="row">
  <% if (projects && projects.length) { %>
    <% projects.forEach(function(p){ %>
      <div class="col-md-6">
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title"><%= p.title %></h5>
            <p class="card-text"><%= p.description %></p>
            <a class="btn btn-outline-primary" href="<%= p.link %>">View</a>
          </div>
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <p>No projects yetâ€”add some!</p>
  <% } %>
</div>
